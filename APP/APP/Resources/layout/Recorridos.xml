<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/amarillo"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="65dp">
    
        <ImageView
            android:id="@+id/volverRecorridos"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/leftarrow"/>

        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="220dp"
            android:layout_height="2000dp"
            android:src="@drawable/banasanTituloSinFondo"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/textFinca"
            android:text="Finca"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:textColor="@color/black"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:text="Fecha Inicial"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_width="310dp"
            android:layout_height="25dp"
            android:textColor="@color/black"/>

    </RelativeLayout>

       <RelativeLayout
            android:id="@+id/fecha"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/roundededges"
            android:padding="5dp"
            android:elevation="4dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_width="310dp"
            android:layout_height="60dp">

                <TextView
                    android:id="@+id/fechaText"
                    android:layout_centerInParent="true"
                    android:text="11/11/2020"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:text="Fecha Final"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:layout_width="310dp"
                android:layout_height="25dp"
                android:textColor="@color/black"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fechaFin"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/roundededges"
            android:padding="5dp"
            android:elevation="4dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_width="310dp"
            android:layout_height="60dp">

                <TextView
                    android:id="@+id/fechaFinText"
                    android:layout_centerInParent="true"
                    android:text="11/11/2020"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"/>

        </RelativeLayout>

        <ListView
            android:layout_marginTop="20dp"
            android:listSelector="@android:color/transparent"
            android:divider = "@color/amarillo"
            android:padding="10dp"
            android:layout_width="330dp"
            android:layout_height="320dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/listVisitas" />

</LinearLayout>
