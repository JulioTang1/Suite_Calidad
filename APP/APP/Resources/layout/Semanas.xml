<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/amarillo"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="65dp">
    
        <ImageView
            android:id="@+id/volverEnfermedades"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/leftarrow"/>

        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="220dp"
            android:layout_height="2000dp"
            android:src="@drawable/banasanTituloSinFondo"/>

    </RelativeLayout>

    <Button
           android:textSize="20dp"
           android:id="@+id/edad1"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="0dp"            
           android:layout_height="55dp"
           android:text="10 Semanas: 0"
           android:background="@drawable/roundededges"
           android:textColor="@color/black"
           android:textAllCaps="false"
           android:layout_width="300dp"/>

    <Button
           android:textSize="20dp"
           android:id="@+id/edad2"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="20dp"            
           android:layout_height="55dp"
           android:text="7 Semanas: 0"
           android:background="@drawable/roundededges"
           android:textColor="@color/black"
           android:textAllCaps="false"
           android:layout_width="300dp"/>

    <Button
           android:textSize="20dp"
           android:id="@+id/edad3"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="20dp"            
           android:layout_height="55dp"
           android:text="0 Semanas: 0"
           android:background="@drawable/roundededges"
           android:textColor="@color/black"
           android:textAllCaps="false"
           android:layout_width="300dp"/>

    <Button
           android:textSize="20dp"
           android:id="@+id/edad6"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="20dp"            
           android:layout_height="55dp"
           android:text="Parcela Fija: 0"
           android:background="@drawable/roundededges"
           android:textColor="@color/black"
           android:textAllCaps="false"
           android:layout_width="300dp"/>

    <Button
           android:textSize="20dp"
           android:id="@+id/guardarPunto"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="30dp"            
           android:layout_height="55dp"
           android:text="Guardar Punto Lectura"
           android:background="@color/colorPrimary"
           android:textColor="@color/amarillo"
           android:textAllCaps="false"
           android:layout_width="300dp"/>

</LinearLayout>
