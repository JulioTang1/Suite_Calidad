<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/amarillo"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="65dp">
    
        <ImageView
            android:id="@+id/volver"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/leftarrow"/>

        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="220dp"
            android:layout_height="2000dp"
            android:src="@drawable/banasanTituloSinFondo"/>

    </RelativeLayout>

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:textSize="18dp"
        android:text="Departamento"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:textColor="@color/black"/>

    <RelativeLayout
        android:id="@+id/selectDepartamento"
        android:background="@drawable/roundededges"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="50dp">

        <TextView
             android:textSize="20dp"
             android:gravity="center_vertical"
             android:id="@+id/selectDepartamentoText"
             android:text="Departamento"
             android:layout_width="250dp"
             android:layout_height="50dp"
             android:textColor="@color/black"/>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/selectDepartamentoText"
            android:layout_gravity="left"
            android:src="@drawable/drop_down"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    </RelativeLayout>

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:textSize="18dp"
        android:text="Municipio"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:textColor="@color/black"/>

    <RelativeLayout
        android:id="@+id/selectMunicipio"
        android:background="@drawable/roundededges"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="50dp">

        <TextView
             android:textSize="20dp"
             android:gravity="center_vertical"
             android:id="@+id/selectMunicipioText"
             android:text="Municipio"
             android:layout_width="250dp"
             android:layout_height="50dp"
             android:textColor="@color/black"/>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/selectMunicipioText"
            android:layout_gravity="left"
            android:src="@drawable/drop_down"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    </RelativeLayout>

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:textSize="18dp"
        android:text="Finca"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:textColor="@color/black"/>

    <RelativeLayout
        android:id="@+id/selectFinca"
        android:background="@drawable/roundededges"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="50dp">

        <TextView
             android:textSize="20dp"
             android:gravity="center_vertical"
             android:id="@+id/selectFincaText"
             android:text="Finca"
             android:layout_width="250dp"
             android:layout_height="50dp"
             android:textColor="@color/black"/>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/selectFincaText"
            android:layout_gravity="left"
            android:src="@drawable/drop_down"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    </RelativeLayout>

    <Button
           android:textSize="20dp"
           android:id="@+id/iniciarRecorrido"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="80dp"            
           android:layout_height="55dp"
           android:text="Iniciar"
           android:background="@color/colorPrimary"
           android:textColor="@color/amarillo"
           android:textAllCaps="false"
           android:layout_width="300dp"/>

</LinearLayout>
