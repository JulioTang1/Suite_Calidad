<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/amarillo"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="65dp">
    
        <ImageView
            android:id="@+id/salir"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/salir"/>

        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="220dp"
            android:layout_height="2000dp"
            android:src="@drawable/banasanTituloSinFondo"/>

    </RelativeLayout>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/sincronizar"
        android:layout_height="60dp"
        android:layout_width="280dp"
        android:text="Sincronizar"
        android:layout_gravity="center|top"
        android:layout_marginBottom="30dp"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:elevation="2dp"
        android:translationZ="2dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/amarillo"/>

    <Button
        android:id="@+id/consultarVisitas"
        android:layout_height="60dp"
        android:layout_width="280dp"
        android:text="Consultar Recorrido"
        android:layout_gravity="center|top"
        android:layout_marginBottom="30dp"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:elevation="2dp"
        android:translationZ="2dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/amarillo"/>

    <Button
        android:id="@+id/nuevoRecorrido"
        android:layout_height="60dp"
        android:layout_width="280dp"
        android:text="Nuevo Recorrido"
        android:layout_gravity="center|top"
        android:layout_marginBottom="30dp"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:elevation="2dp"
        android:translationZ="2dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/amarillo"/>

    <Button
        android:id="@+id/precipitaciones"
        android:layout_height="60dp"
        android:layout_width="280dp"
        android:text="Registro Precipitaciones"
        android:layout_gravity="center|top"
        android:layout_marginBottom="30dp"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:elevation="2dp"
        android:translationZ="2dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/amarillo"/>

    <Button
        android:id="@+id/consultarBioseguridad"
        android:layout_height="60dp"
        android:layout_width="280dp"
        android:text="Consultar Bioseguridad"
        android:layout_gravity="center|top"
        android:layout_marginBottom="30dp"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:elevation="2dp"
        android:translationZ="2dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/amarillo"/>

    <Button
        android:id="@+id/bioseguridad"
        android:layout_height="60dp"
        android:layout_width="280dp"
        android:text="Registro Bioseguridad"
        android:layout_gravity="center|top"
        android:layout_marginBottom="30dp"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:elevation="2dp"
        android:translationZ="2dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/amarillo"/>

    <TextView
        android:layout_marginTop="15dp"
        android:text="V.210826"
        android:textSize="10dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textColor="@color/black"/>

</LinearLayout>