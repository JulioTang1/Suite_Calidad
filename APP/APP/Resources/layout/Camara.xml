<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/amarillo"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="65dp">
    
        <ImageView
            android:id="@+id/volverCamara"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/leftarrow"/>

        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="220dp"
            android:layout_height="2000dp"
            android:src="@drawable/banasanTituloSinFondo"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.20"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:src="@drawable/vacio"
                android:scaleType="centerCrop"
                android:cropToPadding="true"
                android:id="@+id/im1"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:src="@drawable/vacio"
                android:scaleType="centerCrop"
                android:cropToPadding="true"
                android:id="@+id/im2"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:src="@drawable/vacio"
                android:scaleType="centerCrop"
                android:cropToPadding="true"
                android:id="@+id/im3"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.78"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:cropToPadding="true"
            android:src="@drawable/vacio"
            android:id="@+id/imageViewPanel"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

             <ImageView
                android:id="@+id/eliminarFoto"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:src="@drawable/caneca_fotos"/>

            <ImageView
                android:id="@+id/botonCaptura"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:src="@drawable/camara_fotos"/>

            <ImageView
                android:id="@+id/seleccionarGaleria"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:src="@drawable/carpeta_fotos"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
