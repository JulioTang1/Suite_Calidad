<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/pregunta"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:text="1.Hay zona de bioseguridad en la entrada de la finca con áreas limpias y sucias delimitadas y piso de fácil lavado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"/>

    <RelativeLayout
        android:layout_below="@+id/pregunta"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        android:layout_height="70dp"
        android:layout_width="300dp">

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="70dp">

            <RelativeLayout
                android:background="@drawable/roundededgesleft"
                android:id="@+id/si"
                android:layout_width="80dp"
                android:layout_height="70dp">

                <TextView
                    android:textStyle="bold"
                    android:textSize="20dp"                
                    android:text="SI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"/>            
            
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/edges"
                android:id="@+id/no"
                android:layout_toRightOf="@+id/si"
                android:layout_width="80dp"
                android:layout_height="70dp">

                <TextView
                    android:textStyle="bold"
                    android:textSize="20dp"                
                    android:text="NO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"/>            
            
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/roundededgesright"
                android:id="@+id/na"
                android:layout_toRightOf="@+id/no"
                android:layout_width="80dp"
                android:layout_height="70dp">

                <TextView
                    android:textStyle="bold"
                    android:textSize="20dp"                
                    android:text="N/A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"/>            
            
            </RelativeLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/imagen"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/camara_azul"/>

    </RelativeLayout>

</RelativeLayout>
